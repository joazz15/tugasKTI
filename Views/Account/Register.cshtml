@model SampleSecureWeb.ViewModels.RegistrationViewModel

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                Registration
            </div>
            <div class="card-body">
                <!-- Menampilkan pesan sukses atau error -->
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }

                <!-- Form Registrasi -->
                <form asp-action="Register">
                    <!-- Menampilkan pesan validasi umum -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Input Username -->
                    <div class="form-group">
                        <input asp-for="Username" class="form-control form-control-user" placeholder="Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Input Password -->
                    <div class="form-group">
                        <input asp-for="Password" class="form-control form-control-user" placeholder="Password" type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Input Confirm Password -->
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Confirm Password" type="password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Tombol Submit -->
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Register">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Menggunakan script validasi untuk menampilkan pesan error di sisi klien -->
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
